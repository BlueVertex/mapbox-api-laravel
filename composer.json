{
    "name": "bluevertex/mapbox-api-laravel",
    "description": "A Laravel 11+ Package for managing Mapbox Datasets and Tilesets",
    "type": "library",
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0",
        "illuminate/support": "^11.0",
        "jmikola/geojson": "^1.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Fox",
            "email": "matt.fox@thebluevertex.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "BlueVertex\\MapBoxAPILaravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BlueVertex\\MapBoxAPILaravel\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BlueVertex\\MapBoxAPILaravel\\MapBoxAPILaravelServiceProvider"
            ],
            "aliases": {
                "Mapbox": "BlueVertex\\MapBoxAPILaravel\\Facades\\Mapbox"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ]
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^10.5"
    }
}
